<a href="/" class="text-primary ">Quay lai</a>
<h2 class="text-success">Them san pham moi</h2>
<form action="/add" method="post" autocomplete="off">
  <div class="form-group">
    <label for="name" ></label>
    <input
      type="text"
      class="form-control"
      id="name"
      placeholder="Enter name"
      name="name"
      value="{{name}}"
    />
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    <input
      type="text"
      class="form-control"
      id="price"
      placeholder="Enter price"
      name="price"
      value="{{price}}"
    />
  </div>
  {{#if error}}
    <div class="alert alert-warning" role="alert">
      {{error}}
    </div>
  {{/if}}
  <button type="submit" class="btn btn-success ">Them san pham moi</button>
</form>